<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="5">
<listeners>
	<listener class-name="Utility.listenerClass"></listener>
</listeners> 
  <test  name="SmokeTest1">
