	<groups>
		<run>
			<include name="Smoke"></include>
		</run>
	</groups>
    <classes>
      <class name="testCases.indexPageTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test  name="SmokeTest2">
  	<parameter name="browser" value="edge"></parameter>
	<groups>
		<run>
			<include name="Smoke"></include>
		</run>
	</groups>
    <classes>
      <class name="testCases.indexPageTest"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
